<Modal ShowFooter="true" 
       Size="UltimateRemote.Enums.ModalSize.Small" 
       Title="@ModalTitle" VCenter="true" Show="true" BodyCss="p-1">
    <Content>
        <ul class="list-group list-group-borderless" style="font-family: 'C64Pro'; font-size: 1rem; line-height: 1; letter-spacing:-1px;">
            @foreach (var dirItem in D64Reader.DirectoryItems)
            {
                @if (dirItem.Type == "PRG")
                {
                    <li class="list-gorup-item list-group-item-action d-flex align-items-center justify-content-between" role="button" @ondblclick="@(()=>ItemSelected(dirItem, true))">
                        <span class="me-1" style="min-width:53px;">@dirItem.Blocks</span>
                        <span class="flex-grow-1 text-center">@((MarkupString)dirItem.NameHtmlCodeString)</span>
                        <span>@dirItem.Type</span>
                    </li>
                }
                else
                {
                    <li class="list-gorup-item list-group-item-action d-flex align-items-center justify-content-between">
                        <span class="me-1" style="min-width:53px;">@dirItem.Blocks</span>
                        <span class="flex-grow-1 text-center">@((MarkupString)dirItem.NameHtmlCodeString)</span>
                        <span>@dirItem.Type</span>
                    </li>
                }

                @* <li class="list-gorup-item list-group-item-action d-flex align-items-center justify-content-between">
                    <span class="me-1" style="min-width:53px;">@dirItem.Blocks</span>
                    <span class="flex-grow-1 text-center">@((MarkupString)dirItem.NameHtmlCodeString)</span>
                    <span>@dirItem.Type</span>
                    @if (dirItem.Type == "PRG")
                    {
                        <i class="ph-file-arrow-up mx-1" role="button" @onclick="@(()=>ItemSelected(dirItem, false))"></i>
                        <i class="ph-play mx-1" role="button" @onclick="@(()=>ItemSelected(dirItem, true))"></i>
                    }
                    else
                    {
                        <span class="mx-1">&nbsp;</span>
                        <span class="mx-1">&nbsp;</span>
                    }
                </li> *@
            }
        </ul>
    </Content>
    <FooterContent>
        <span class="form-text">Double @(PlatformDependent.ClickTap) to select</span>
    </FooterContent>
</Modal>
